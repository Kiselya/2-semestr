#include <iostream>
using namespace std;

const int SIZE = 26;

class stack {
 char stck[SIZE];
 int tos;
public:
stack();
~stack();
void init();
void push(char ch);
char pop;
};

stack::stack()
{
cout << "Inicializiruem stek\n";
tos = 0;
}

stack::~stack()
{
cout << "Rabotaet konstructor..\n;
}

void stack::init()
{
tos = 0;
}

void stack::push(char ch)
{
 if (tos==SIZE) {
   cout << "Stek polon!" << endl;
   return;
}
stck[tos] = ch;
tos++;
}

char stack::pop() {
 if (tos==0) {
 cout << "Stek pust" << endl;
 return 0;
 }
tos--;
return stck[tos];
}

int main ()
{
  stack s1, s2;
  int i;
  
  s1.push('a');
   s2.push('b');
    s1.push('c');
     s2.push('d');
      s1.push('e');
       s2.push('f');
       
for (i=0; i<3; i++) cout << s1.pop() << "  ";
cout << endl;
for (i=0; i<3; i++) cout << s2.pop() << "  ";
cout << endl;
}
