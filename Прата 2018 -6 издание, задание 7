#include <iostream> 
 
int time(void);
int h;
int m;
int main()
{
    using namespace std;
    cout << "Enter the number of horors: ";
    cin >> h;
    cout << "Enter the number of minutes: ";
    cin >> m;
    int h = time();
    return 0;
}
int time(void)
{
    using namespace std;
 
    cout << "Time: " << h << ":" << m << endl;
    return 0;
}
