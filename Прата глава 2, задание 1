#include <iostream>
using namespace std;
 
int main()
{
    const float inch = 0.0833333333; 
    unsigned int i;
    cout << "Enter your height in inches: __\b\b";
    cin >> i;
    float f1 = inch;
    int f2 = i * f1;
    int f3 = i % f2;
    cout << "Enter your height in feet: "<< f2 << " and inches: " << f3 << endl;
    cin.get();
    cin.get();
    return 0;
}
